{
  "name": "ADS Beet",
  "version": "0.1",
  "description": "__MSG_extDescription__",
  "author": "https://adshares.net/",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "default_locale": "en",
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "ADS Beet"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "web_accessible_resources": [
    "comm.html",
    "scripts/proxy.js"
  ]
}